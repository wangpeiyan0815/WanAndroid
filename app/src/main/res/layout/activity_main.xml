<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/mainVp"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            tl:layout_constraintBottom_toTopOf="@+id/tabLayout"
            android:layout_height="wrap_content"></androidx.viewpager.widget.ViewPager>

    <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            tl:tl_iconHeight="22dp"
            tl:tl_iconWidth="22dp"
            tl:tl_tab_padding="0dp"
            tl:tl_indicator_color="#2C97DE"
            tl:tl_indicator_height="0dp"
            tl:tl_textSelectColor="#2C97DE"
            tl:tl_textUnselectColor="#66000000"
            tl:tl_textsize="12sp"
            tl:tl_underline_color="#DDDDDD"
            tl:layout_constraintBottom_toBottomOf="parent"
            tl:tl_underline_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>